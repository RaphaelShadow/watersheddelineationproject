        </activity>
        <activity
            android:name="org.waterapps.watersheddelineation.AppPreferenceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.openintents.action.PICK_FILE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.waterapps.watersheddelineation.SettingsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.waterapps.watersheddelineation.SettingsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.waterapps.watersheddelineation.HelpActivity"
            android:label="Waterplane Help" >
            <intent-filter>
                <action android:name="org.waterapps.watersheddelineation.HelpActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

